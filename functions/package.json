{
  "name": "functions",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dbreset": "firebase firestore:delete --all-collections",
    "dbreset:pulishers": "firebase firestore:delete -y --shallow publishers",
    "dbseed": "npm run dbseed:publishers",
    "dbseed:publishers": "node lib/commands/dbseed.js publishers seeds/publishers.tsv"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "commander": "^6.2.0",
    "csv-parse": "^4.14.0",
    "date-fns": "^2.16.1",
    "date-fns-timezone": "^0.1.4",
    "firebase": "^8.0.1",
    "firebase-admin": "^9.2.0",
    "firebase-functions": "^3.11.0",
    "lodash": "^4.17.20",
    "node-fetch": "^2.6.1",
    "puppeteer": "^5.4.1"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "firebase-functions-test": "^0.2.0",
    "jest": "^26.6.3",
    "ts-jest": "^26.4.4",
    "typescript": "^3.8.0"
  },
  "private": true
}
